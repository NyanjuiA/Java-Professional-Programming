/**
 * This class will be used to create 2 dimensional
 * circle objects
 * 
 * @author Nyanjui
 */
public class SimpleCircle
{
   protected float radius;

    public SimpleCircle(float radius)
    {
        this.radius = radius;
    }

    /**
     * @return the radius
     */
    public float getRadius()
    {
        return radius;
    }

    /**
     * @param radius the radius to set
     */
    public void setRadius(float radius)
    {
        this.radius = radius;
    }
   
    /**
     * This method calculates the area of the circle.
     * 
     * @return Area of the circle as a float
     */
    public float calcArea()
    {
        float area = (float) (Math.PI * Math.pow(radius,2));
        return area;
    }
    
    /**
     * This method calculates the Circumference of the circle.
     * 
     * @return Circumference of the circle as a float
     */
    public float calcCircum()
    {
        float circum = (float) (Math.PI * (radius * 2));
        return circum;
    }
}
